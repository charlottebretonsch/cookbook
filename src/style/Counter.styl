@import './vars.styl'

.counter
  height = 2.5 * grid-size

  align-items: center
  background: col-gray-light
  color: col-gray-dark
  display: flex
  flex-flow: row nowrap
  flex-grow: 1
  height: height
  justify-content: space-between
  padding: 0 (grid-size / 2)

  &:not(:last-child)
    margin-right: (grid-size / 2)

  .buttons
    display: flex
    flex-flow: column nowrap
    height: height
    justify-content: space-between

    button
      background: transparent
      border: none
      flex-grow: 1
      margin-right: -(grid-size / 2)
      padding: 0
      width: 2 * grid-size

      &:hover
        background: darken(col-gray-light, 10%)

    img
      cursor: pointer
      margin: 1px 0
